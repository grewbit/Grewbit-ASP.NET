@model GrewbitWeb.ViewModels.AccountSignUpViewModel

@{
    ViewBag.Title = "Sign Up";
}

<div class="h--float-box">
    <img src="~/Content/Images/logo.png" alt="Grewbit logo" class="ui mini centered image" />
    <h2 class="ui header centered">
        Let's sign you up!
    </h2>

    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @class = "ui form" }))
    {
        <div class="field">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { placeholder = "What's your name?" })
        </div>

        <div class="field">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Your email address" })
        </div>

        <div class="field">
            @Html.LabelFor(m => m.Password)
            @Html.TextBoxFor(m => m.Password, new { placeholder = "Type your password", type = "password" })
        </div>

        <div class="field">
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm your password", type = "password" })
        </div>

        if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary("There were some errors")
        }

        <button class="ui teal button" type="submit">Sign Up</button>
    }

    <p style="margin-top: 30px;">Already signed up? @Html.ActionLink("Login here", "SignIn") instead.</p>
</div>

